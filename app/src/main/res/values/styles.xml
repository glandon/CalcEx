<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="button_style">
        <item name="android:textColor">@color/button_text</item>
        <item name="android:textSize">40.0dip</item>
        <item name="android:background">@drawable/normal_button</item>
        <item name="android:focusable">true</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:layout_margin">2.0dip</item>
        <item name="android:layout_weight">1.0</item>
        <item name="android:soundEffectsEnabled">false</item>
        <item name="android:hapticFeedbackEnabled">false</item>
    </style>

    <style name="red_button_style" parent="@style/button_style">
        <item name="android:background">@drawable/red_button</item>
    </style>

    <style name="button_small_style" parent="@style/button_style">
        <item name="android:textSize">30.0dip</item>
    </style>

    <style name="display_style">
        <item name="android:textSize">40.0dip</item>
        <item name="android:textColor">#ff000000</item>
        <item name="android:focusable">false</item>
        <item name="android:gravity">right|center</item>
        <item name="android:scrollbars">none</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">0.0dip</item>
        <item name="android:layout_weight">1.0</item>
        <item name="android:maxLines">1</item>
        <item name="android:scrollHorizontally">true</item>
        <item name="android:paddingLeft">4.0dip</item>
        <item name="android:paddingTop">6.0dip</item>
        <item name="android:paddingRight">4.0dip</item>
        <item name="android:paddingBottom">4.0dip</item>
        <item name="android:background">@drawable/display</item>
    </style>

</resources>